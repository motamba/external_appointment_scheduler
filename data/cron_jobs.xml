<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Sequence for Appointment Reference -->
        <record id="seq_external_appointment" model="ir.sequence">
            <field name="name">Appointment Sequence</field>
            <field name="code">external.appointment</field>
            <field name="prefix">APT</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Cron Job: Send Reminders -->
        <record id="cron_send_appointment_reminders" model="ir.cron">
            <field name="name">Appointments: Send Reminders</field>
            <field name="model_id" ref="model_external_appointment"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Backwards-compatible XML ID expected in tests -->
        <record id="ir_cron_send_reminders" model="ir.cron">
            <field name="name">Appointments: Send Reminders (alias)</field>
            <field name="model_id" ref="model_external_appointment"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron Job: Cleanup Old Appointments -->
        <record id="cron_cleanup_old_appointments" model="ir.cron">
            <field name="name">Appointments: Cleanup Old Records</field>
            <field name="model_id" ref="model_external_appointment"/>
            <field name="state">code</field>
            <field name="code">model._cron_cleanup_old_appointments()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron Job: Refresh OAuth Tokens -->
        <record id="cron_refresh_oauth_tokens" model="ir.cron">
            <field name="name">Appointments: Refresh OAuth Tokens</field>
            <field name="model_id" ref="model_external_calendar_config"/>
            <field name="state">code</field>
            <field name="code">model._cron_refresh_tokens()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron Job: Refresh Webhooks -->
        <record id="cron_refresh_webhooks" model="ir.cron">
            <field name="name">Appointments: Refresh Webhooks</field>
            <field name="model_id" ref="model_external_calendar_config"/>
            <field name="state">code</field>
            <field name="code">model._cron_refresh_webhooks()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>
