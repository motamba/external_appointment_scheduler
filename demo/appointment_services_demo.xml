<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Demo Services -->
        <record id="service_consultation" model="external.appointment.service">
            <field name="name">Initial Consultation</field>
            <field name="sequence">10</field>
            <field name="description">
                &lt;p&gt;60-minute initial consultation to discuss your needs and objectives.&lt;/p&gt;
                &lt;ul&gt;
                    &lt;li&gt;Comprehensive assessment&lt;/li&gt;
                    &lt;li&gt;Goal setting&lt;/li&gt;
                    &lt;li&gt;Personalized recommendations&lt;/li&gt;
                &lt;/ul&gt;
            </field>
            <field name="duration_minutes">60</field>
            <field name="buffer_minutes">15</field>
            <field name="capacity">1</field>
            <field name="price">100.00</field>
            <field name="min_lead_hours">24</field>
            <field name="max_lead_days">90</field>
            <field name="allow_cancellation" eval="True"/>
            <field name="cancellation_hours">24</field>
            <field name="allow_reschedule" eval="True"/>
            <field name="color">1</field>
        </record>

        <record id="service_followup" model="external.appointment.service">
            <field name="name">Follow-up Session</field>
            <field name="sequence">20</field>
            <field name="description">
                &lt;p&gt;30-minute follow-up session for existing clients.&lt;/p&gt;
            </field>
            <field name="duration_minutes">30</field>
            <field name="buffer_minutes">10</field>
            <field name="capacity">1</field>
            <field name="price">50.00</field>
            <field name="min_lead_hours">12</field>
            <field name="max_lead_days">60</field>
            <field name="allow_cancellation" eval="True"/>
            <field name="cancellation_hours">12</field>
            <field name="allow_reschedule" eval="True"/>
            <field name="color">3</field>
        </record>

        <record id="service_workshop" model="external.appointment.service">
            <field name="name">Group Workshop</field>
            <field name="sequence">30</field>
            <field name="description">
                &lt;p&gt;90-minute interactive group workshop (max 10 participants).&lt;/p&gt;
            </field>
            <field name="duration_minutes">90</field>
            <field name="buffer_minutes">30</field>
            <field name="capacity">10</field>
            <field name="price">150.00</field>
            <field name="min_lead_hours">48</field>
            <field name="max_lead_days">120</field>
            <field name="allow_cancellation" eval="True"/>
            <field name="cancellation_hours">48</field>
            <field name="allow_reschedule" eval="False"/>
            <field name="color">5</field>
        </record>

    </data>
</odoo>
