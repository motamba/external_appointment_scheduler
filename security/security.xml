<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Security Groups -->
        <record id="group_appointment_user" model="res.groups">
            <field name="name">Appointment User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_appointment_manager" model="res.groups">
            <field name="name">Appointment Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_appointment_user'))]"/>
        </record>

        <!-- Record Rules -->
        
        <!-- Portal users can only see their own appointments -->
        <record id="appointment_portal_rule" model="ir.rule">
            <field name="name">Portal User: Own Appointments Only</field>
            <field name="model_id" ref="model_external_appointment"/>
            <field name="domain_force">[('portal_user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Internal users can see all appointments -->
        <record id="appointment_user_rule" model="ir.rule">
            <field name="name">Appointment User: All Appointments</field>
            <field name="model_id" ref="model_external_appointment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_appointment_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Managers can delete appointments -->
        <record id="appointment_manager_rule" model="ir.rule">
            <field name="name">Appointment Manager: Full Access</field>
            <field name="model_id" ref="model_external_appointment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_appointment_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Services are visible to portal users (read-only) -->
        <record id="service_portal_rule" model="ir.rule">
            <field name="name">Portal User: Read Services</field>
            <field name="model_id" ref="model_external_appointment_service"/>
            <field name="domain_force">[('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Calendar config restricted to managers -->
        <record id="calendar_config_manager_rule" model="ir.rule">
            <field name="name">Calendar Config: Managers Only</field>
            <field name="model_id" ref="model_external_calendar_config"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_appointment_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Token access restricted to appointment managers only -->
        <record id="calendar_token_system_rule" model="ir.rule">
            <field name="name">Calendar Token: Managers Only</field>
            <field name="model_id" ref="model_external_calendar_token"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_appointment_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>
