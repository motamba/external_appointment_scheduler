<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Appointment List View -->
    <record id="view_external_appointment_tree" model="ir.ui.view">
        <field name="name">external.appointment.list</field>
        <field name="model">external.appointment</field>
        <field name="arch" type="xml">
            <list string="Appointments" decoration-info="status=='draft'" decoration-success="status=='confirmed'" decoration-muted="status=='cancelled'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="service_id"/>
                <field name="start_datetime"/>
                <field name="duration_minutes" widget="integer"/>
                <field name="status" widget="badge" decoration-info="status=='draft'" decoration-success="status=='confirmed'" decoration-danger="status=='cancelled'"/>
                <field name="provider"/>
                <field name="created_via"/>
            </list>
        </field>
    </record>

    <!-- Appointment Form View -->
    <record id="view_external_appointment_form" model="ir.ui.view">
        <field name="name">external.appointment.form</field>
        <field name="model">external.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="status != 'draft'"/>
                    <button name="action_check_in" string="Check In" type="object" class="oe_highlight" invisible="status != 'confirmed'"/>
                    <button name="action_complete" string="Mark Complete" type="object" invisible="status not in ('confirmed', 'checked_in')"/>
                    <button name="action_cancel" string="Cancel" type="object" confirm="Are you sure you want to cancel this appointment?" invisible="status in ('cancelled', 'completed', 'no_show')"/>
                    <button name="action_mark_no_show" string="Mark No Show" type="object" invisible="status != 'confirmed'"/>
                    <button name="action_reschedule" string="Reschedule" type="object" invisible="status not in ('draft', 'confirmed')"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,confirmed,completed"/>
                </header>
                <sheet>
                    <!-- button box removed: action_view_partner method not implemented in model -->
                    <widget name="web_ribbon" title="Cancelled" bg_color="text-bg-danger" invisible="status != 'cancelled'"/>
                    <widget name="web_ribbon" title="Completed" bg_color="text-bg-success" invisible="status != 'completed'"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="display_name" invisible="1"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group name="appointment_info">
                            <field name="service_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="portal_user_id" readonly="1" groups="base.group_no_one"/>
                        </group>
                        <group name="datetime_info">
                            <field name="start_datetime" required="1"/>
                            <field name="end_datetime" required="1"/>
                            <field name="duration_minutes" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="contact_info">
                            <field name="customer_email" widget="email"/>
                            <field name="customer_phone" widget="phone"/>
                        </group>
                        <group name="system_info">
                            <field name="provider"/>
                            <field name="provider_event_id" readonly="1"/>
                            <field name="created_via" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Add appointment notes..."/>
                        </page>
                        <page string="Attachments" name="attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                        <page string="Metadata" name="metadata" groups="base.group_no_one">
                            <field name="metadata" widget="json"/>
                        </page>
                    </notebook>
                </sheet>
                    <!-- <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                    </div> -->
            </form>
        </field>
    </record>

    <!-- Appointment Calendar View -->
    <record id="view_external_appointment_calendar" model="ir.ui.view">
        <field name="name">external.appointment.calendar</field>
        <field name="model">external.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Appointments" date_start="start_datetime" date_stop="end_datetime" color="status" mode="month" quick_create="0">
                <field name="partner_id"/>
                <field name="service_id"/>
                <field name="status"/>
            </calendar>
        </field>
    </record>

    <!-- Appointment Kanban View -->
    <record id="view_external_appointment_kanban" model="ir.ui.view">
        <field name="name">external.appointment.kanban</field>
        <field name="model">external.appointment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" quick_create="false">
                <field name="id"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="service_id"/>
                <field name="start_datetime"/>
                <field name="status"/>
                <templates>
                    <t t-name="card" class="flex-column">
                        <main>
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title">
                                    <field name="partner_id"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="service_id"/>
                                <div>
                                    <i class="fa fa-calendar me-1" title="Calendar"/>
                                    <field name="start_datetime"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom mt-2">
                                <span class="text-muted"><field name="name"/></span>
                            </div>
                        </main>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Appointment Search View -->
    <record id="view_external_appointment_search" model="ir.ui.view">
        <field name="name">external.appointment.search</field>
        <field name="model">external.appointment</field>
        <field name="arch" type="xml">
            <search string="Appointments">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="service_id"/>
                <field name="status"/>
                <separator/>
                <filter name="draft" string="Draft" domain="[('status', '=', 'draft')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('status', '=', 'confirmed')]"/>
                <filter name="completed" string="Completed" domain="[('status', '=', 'completed')]"/>
                <filter name="cancelled" string="Cancelled" domain="[('status', '=', 'cancelled')]"/>
                <separator/>
                <!-- Group By filters removed for compatibility with current Odoo XML parsing -->
            </search>
        </field>
    </record>

    <!-- Appointment Action -->
    <record id="action_external_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">external.appointment</field>
        <field name="view_mode">list,form,calendar,kanban</field>
        <field name="search_view_id" ref="view_external_appointment_search"/>
        <field name="context">{'search_default_upcoming': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first appointment
            </p>
            <p>
                Appointments are synchronized with your external calendar provider.
            </p>
        </field>
    </record>

</odoo>
