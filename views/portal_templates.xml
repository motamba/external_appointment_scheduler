<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Add Appointments menu item to Portal Homepage -->
    <template id="portal_my_home_appointments" name="Appointments" inherit_id="portal.portal_my_home" customize_show="True" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
            <t t-set="portal_client_category_enable" t-value="True"/>
            <t t-set="portal_vendor_category_enable" t-value="True"/>
        </xpath>
        <xpath expr="//div[@id='portal_client_category']" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/external_appointment_scheduler/static/src/img/appointments.svg'"/>
                <t t-set="title">Appointments</t>
                <t t-set="url" t-value="'/my/appointments'"/>
                <t t-set="text">View and manage your appointments</t>
                <t t-set="placeholder_count" t-value="'appointment_count'"/>
                <t t-set="config_card" t-value="True"/>
            </t>
        </xpath>
    </template>
    
    <!-- Portal My Appointments List -->
    <template id="portal_my_appointments" name="My Appointments">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Appointments</t>
            </t>
            
            <t t-if="not appointments">
                <div class="alert alert-info" role="alert">
                    <p>You don't have any appointments yet.</p>
                    <a href="/book" class="btn btn-primary">Book an Appointment</a>
                </div>
            </t>
            <t t-if="appointments" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Reference</th>
                        <th>Service</th>
                        <th>Date &amp; Time</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="appointments" t-as="appointment">
                        <tr>
                            <td><a t-att-href="'/my/appointments/' + str(appointment.id)"><t t-esc="appointment.name"/></a></td>
                            <td><t t-esc="appointment.service_id.name"/></td>
                            <td><t t-esc="appointment.start_datetime" t-options="{'widget': 'datetime'}"/></td>
                            <td>
                                <span t-if="appointment.status == 'draft'" class="badge badge-secondary">Draft</span>
                                <span t-if="appointment.status == 'confirmed'" class="badge badge-success">Confirmed</span>
                                <span t-if="appointment.status == 'completed'" class="badge badge-primary">Completed</span>
                                <span t-if="appointment.status == 'cancelled'" class="badge badge-danger">Cancelled</span>
                                <span t-if="appointment.status == 'no_show'" class="badge badge-warning">No Show</span>
                            </td>
                            <td class="text-right">
                                <a t-att-href="'/my/appointments/' + str(appointment.id)" class="btn btn-sm btn-secondary">
                                    <i class="fa fa-eye"/> View
                                </a>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </t>
        </t>
    </template>

    <!-- Portal Appointment Detail Page -->
    <template id="portal_appointment_page" name="Appointment Details">
        <t t-call="portal.portal_layout">
            <t t-set="o" t-value="appointment"/>
            
            <div class="container mt-3">
                <!-- Success message after booking -->
                <div t-if="request.params.get('booking_success')" class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong><i class="fa fa-check-circle"/> Success!</strong> Your appointment has been booked successfully! A confirmation email has been sent to you.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <h3>
                                    <t t-esc="appointment.name"/>
                                    <span t-if="appointment.status == 'confirmed'" class="badge badge-success float-right">Confirmed</span>
                                    <span t-if="appointment.status == 'cancelled'" class="badge badge-danger float-right">Cancelled</span>
                                    <span t-if="appointment.status == 'completed'" class="badge badge-primary float-right">Completed</span>
                                </h3>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h5>Appointment Information</h5>
                                        <p><strong>Service:</strong> <t t-esc="appointment.service_id.name"/></p>
                                        <p><strong>Date &amp; Time:</strong> <t t-esc="appointment.start_datetime" t-options="{'widget': 'datetime'}"/></p>
                                        <p><strong>Duration:</strong> <t t-esc="appointment.duration_minutes"/> minutes</p>
                                        <p t-if="appointment.notes"><strong>Notes:</strong> <t t-esc="appointment.notes"/></p>
                                    </div>
                                    <div class="col-md-6">
                                        <h5>Contact Information</h5>
                                        <p><strong>Name:</strong> <t t-esc="appointment.partner_id.name"/></p>
                                        <p t-if="appointment.customer_email"><strong>Email:</strong> <t t-esc="appointment.customer_email"/></p>
                                        <p t-if="appointment.customer_phone"><strong>Phone:</strong> <t t-esc="appointment.customer_phone"/></p>
                                    </div>
                                </div>
                                
                                <div class="row mt-3" t-if="appointment.can_cancel or appointment.can_reschedule">
                                    <div class="col-12">
                                        <form t-if="appointment.can_cancel" method="post" t-attf-action="/my/appointments/#{appointment.id}/cancel" class="d-inline">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to cancel this appointment?');">
                                                <i class="fa fa-times"/> Cancel Appointment
                                            </button>
                                        </form>
                                        <a t-if="appointment.can_reschedule" href="#" class="btn btn-warning ml-2">
                                            <i class="fa fa-calendar"/> Reschedule
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Portal Book Appointment Page -->
    <template id="portal_book_appointment" name="Book Appointment">
        <t t-call="portal.portal_layout">
            <div class="container mt-3">
                <h1 class="mb-4">Book an Appointment</h1>
                
                <t t-if="not service">
                    <div class="row">
                        <t t-foreach="services" t-as="srv">
                            <div class="col-md-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title"><t t-esc="srv.name"/></h5>
                                        <p class="card-text"><t t-raw="srv.description or 'No description'"/></p>
                                        <p><strong>Duration:</strong> <t t-esc="srv.duration_minutes"/> min</p>
                                        <p t-if="srv.price &gt; 0"><strong>Price:</strong> <t t-esc="srv.price"/> <t t-esc="srv.currency_id.symbol"/></p>
                                        <a t-attf-href="/book/#{srv.id}" class="btn btn-primary">Book Now</a>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </t>
                
                <t t-if="service">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="card">
                                <div class="card-header">
                                    <h3><t t-esc="service.name"/></h3>
                                </div>
                                <div class="card-body">
                                    <!-- Simple booking form without JS dependencies -->
                                    <form method="POST" t-attf-action="/api/appointments/book" class="ea-booking-form">
                                        <input type="hidden" name="service_id" t-att-value="service.id"/>

                                        <!-- If user is logged in, send partner_id and prefill contact fields -->
                                        <t t-if="request.env.user and request.env.user.id != request.env.ref('base.public_user').id">
                                            <input type="hidden" name="partner_id" t-att-value="request.env.user.partner_id.id"/>
                                            <input type="hidden" name="customer_email" t-att-value="request.env.user.email"/>
                                            <input type="hidden" name="customer_name" t-att-value="request.env.user.name"/>
                                        </t>

                                        <div class="mb-3">
                                            <label class="form-label" for="appointment_date">Preferred Date &amp; Time</label>
                                            <input type="datetime-local" class="form-control" id="appointment_date" name="start_datetime" required="required"/>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label" for="customer_name">Name</label>
                                            <input type="text" class="form-control" id="customer_name" name="customer_name" required="required" t-att-value="request.env.user.name if request.env.user and request.env.user.id != request.env.ref('base.public_user').id else ''"/>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label" for="customer_email">Email</label>
                                            <input type="email" class="form-control" id="customer_email" name="customer_email" required="required" t-att-value="request.env.user.email if request.env.user and request.env.user.id != request.env.ref('base.public_user').id else ''"/>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label" for="customer_phone">Phone</label>
                                            <input type="tel" class="form-control" id="customer_phone" name="customer_phone"/>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label class="form-label" for="notes">Notes (Optional)</label>
                                            <textarea class="form-control" id="notes" name="notes" rows="3"></textarea>
                                        </div>
                                        
                                        <div class="text-end">
                                            <button type="submit" class="btn btn-primary btn-lg">Book Appointment</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Service Details</h5>
                                </div>
                                <div class="card-body">
                                    <p><strong>Duration:</strong> <t t-esc="service.duration_minutes"/> minutes</p>
                                    <p t-if="service.price &gt; 0"><strong>Price:</strong> <t t-esc="service.price"/> <t t-esc="service.currency_id.symbol"/></p>
                                    <div t-if="service.description">
                                        <h6>Description:</h6>
                                        <t t-raw="service.description"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <!-- OAuth Success Template -->
    <template id="oauth_success" name="OAuth Connection Successful">
        <t t-call="portal.portal_layout">
            <div class="container mt-5">
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">Successfully Connected!</h4>
                    <p>Your calendar provider has been connected successfully.</p>
                    <hr/>
                    <p class="mb-0">You can now close this window and return to the configuration page.</p>
                </div>
            </div>
        </t>
    </template>

    <!-- OAuth Error Template -->
    <template id="oauth_error" name="OAuth Connection Error">
        <t t-call="portal.portal_layout">
            <div class="container mt-5">
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">Connection Failed</h4>
                    <p><strong>Error:</strong> <t t-esc="error"/></p>
                    <p t-if="error_description"><t t-esc="error_description"/></p>
                    <hr/>
                    <p class="mb-0">Please try again or contact support if the problem persists.</p>
                </div>
            </div>
        </t>
    </template>

</odoo>
