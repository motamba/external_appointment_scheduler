<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Add Appointments menu item to Portal Homepage -->
    <template id="portal_my_home_appointments" name="Appointments" inherit_id="portal.portal_my_home" customize_show="True" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
            <t t-set="portal_client_category_enable" t-value="True"/>
        </xpath>
        <xpath expr="//div[@id='portal_client_category']" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/external_appointment_scheduler/static/src/img/calendar.svg'"/>
                <t t-set="title">Appointments</t>
                <t t-set="url" t-value="'/my/appointments'"/>
                <t t-set="text">View and manage your appointments</t>
                <t t-set="placeholder_count" t-value="'appointment_count'"/>
                <t t-set="config_card" t-value="True"/>
            </t>
        </xpath>
    </template>
    
    <!-- Portal My Appointments List -->
    <template id="portal_my_appointments" name="My Appointments">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            
            <style>
                .btn-primary, .btn-secondary {
                    background-color: #38a3a5 !important;
                    border-color: #38a3a5 !important;
                    color: #ffffff !important;
                }
                .btn-primary:hover, .btn-secondary:hover {
                    background-color: #2d8284 !important;
                    border-color: #2d8284 !important;
                }
            </style>
            
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Appointments</t>
            </t>
            
            <!-- Book New Appointment Button -->
            <div class="o_portal_my_doc_table_actions mb-3">
                <a href="/book" class="btn btn-primary">
                    <i class="fa fa-plus-circle"/> Book New Appointment
                </a>
            </div>
            
            <t t-if="not appointments">
                <div class="alert alert-info" role="alert">
                    <p class="mb-3">You don't have any appointments yet.</p>
                    <p class="text-muted">Click the button above to book your first appointment and choose from our available services.</p>
                </div>
            </t>
            <t t-if="appointments" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Reference</th>
                        <th>Service</th>
                        <th>Date &amp; Time</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="appointments" t-as="appointment">
                        <tr>
                            <td><a t-att-href="'/my/appointments/' + str(appointment.id)"><t t-esc="appointment.name"/></a></td>
                            <td><t t-esc="appointment.service_id.name"/></td>
                            <td><t t-esc="appointment.start_datetime" t-options="{'widget': 'datetime'}"/></td>
                            <td>
                                <span t-if="appointment.status == 'draft'" class="badge bg-secondary text-white">Draft</span>
                                <span t-if="appointment.status == 'confirmed'" class="badge bg-success text-white">Confirmed</span>
                                <span t-if="appointment.status == 'checked_in'" class="badge bg-info text-white">Checked In</span>
                                <span t-if="appointment.status == 'completed'" class="badge bg-primary text-white">Completed</span>
                                <span t-if="appointment.status == 'cancelled'" class="badge bg-danger text-white">Cancelled</span>
                                <span t-if="appointment.status == 'no_show'" class="badge bg-warning text-dark">No Show</span>
                            </td>
                            <td class="text-right">
                                <a t-att-href="'/my/appointments/' + str(appointment.id)" class="btn btn-sm btn-secondary">
                                    <i class="fa fa-eye"/> View
                                </a>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </t>
        </t>
    </template>

    <!-- Portal Appointment Detail Page -->
    <template id="portal_appointment_page" name="Appointment Details">
        <t t-call="portal.portal_layout">
            <t t-set="o" t-value="appointment"/>
            
            <style>
                .btn-primary, .btn-secondary {
                    background-color: #38a3a5 !important;
                    border-color: #38a3a5 !important;
                    color: #ffffff !important;
                }
                .btn-primary:hover, .btn-secondary:hover {
                    background-color: #2d8284 !important;
                    border-color: #2d8284 !important;
                }
            </style>
            
            <div class="container mt-3">
                <!-- Back button (hidden after booking) -->
                <div class="mb-3" t-if="not request.params.get('booking_success')">
                    <a href="/my/appointments" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"/> Back to Appointments
                    </a>
                </div>
                
                <!-- Success message after booking -->
                <div t-if="request.params.get('booking_success')" class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong><i class="fa fa-check-circle"/> Success!</strong> Your appointment has been booked successfully! A confirmation email has been sent to you.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                    <div class="mt-2">
                        <a href="/my/appointments" class="btn btn-primary">
                            <i class="fa fa-list"/> View All Appointments
                        </a>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <h3>
                                    <t t-esc="appointment.name"/>
                                    <span t-if="appointment.status == 'draft'" class="badge bg-secondary text-white float-right">Draft</span>
                                    <span t-if="appointment.status == 'confirmed'" class="badge bg-success text-white float-right">Confirmed</span>
                                    <span t-if="appointment.status == 'checked_in'" class="badge bg-info text-white float-right">Checked In</span>
                                    <span t-if="appointment.status == 'cancelled'" class="badge bg-danger text-white float-right">Cancelled</span>
                                    <span t-if="appointment.status == 'completed'" class="badge bg-primary text-white float-right">Completed</span>
                                    <span t-if="appointment.status == 'no_show'" class="badge bg-warning text-dark float-right">No Show</span>
                                </h3>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h5>Appointment Information</h5>
                                        <p><strong>Service:</strong> <t t-esc="appointment.service_id.name"/></p>
                                        <p><strong>Date &amp; Time:</strong> <t t-esc="appointment.start_datetime" t-options="{'widget': 'datetime'}"/></p>
                                        <p><strong>Duration:</strong> <t t-esc="appointment.duration_minutes"/> minutes</p>
                                        <p t-if="appointment.notes"><strong>Notes:</strong> <t t-esc="appointment.notes"/></p>
                                    </div>
                                    <div class="col-md-6">
                                        <h5>Contact Information</h5>
                                        <p><strong>Name:</strong> <t t-esc="appointment.partner_id.name"/></p>
                                        <p t-if="appointment.customer_email"><strong>Email:</strong> <t t-esc="appointment.customer_email"/></p>
                                        <p t-if="appointment.customer_phone"><strong>Phone:</strong> <t t-esc="appointment.customer_phone"/></p>
                                    </div>
                                </div>
                                
                                <!-- Attachments Section -->
                                <div class="row mt-3" t-if="appointment.attachment_ids">
                                    <div class="col-12">
                                        <h5>Attachments</h5>
                                        <ul class="list-group">
                                            <t t-foreach="appointment.attachment_ids" t-as="attachment">
                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                    <span>
                                                        <i class="fa fa-paperclip"/> <t t-esc="attachment.name"/>
                                                    </span>
                                                    <a t-attf-href="/web/content?model=ir.attachment&amp;id=#{attachment.id}&amp;field=datas&amp;download=true&amp;filename=#{attachment.name}&amp;access_token=#{attachment.generate_access_token()[0]}" class="btn btn-sm btn-primary">
                                                        <i class="fa fa-download"/> Download
                                                    </a>
                                                </li>
                                            </t>
                                        </ul>
                                    </div>
                                </div>
                                
                                <div class="row mt-3" t-if="appointment.can_cancel or appointment.can_reschedule">
                                    <div class="col-12">
                                        <a t-if="appointment.can_reschedule" t-attf-href="/my/appointments/#{appointment.id}/reschedule" class="btn btn-warning">
                                            <i class="fa fa-calendar"/> Reschedule
                                        </a>
                                        <form t-if="appointment.can_cancel" method="post" t-attf-action="/my/appointments/#{appointment.id}/cancel" class="d-inline ml-2">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to cancel this appointment?');">
                                                <i class="fa fa-times"/> Cancel Appointment
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Portal Book Appointment Page -->
    <template id="portal_book_appointment" name="Book Appointment">
        <t t-call="portal.portal_layout">
            <style>
                .btn-primary, .btn-secondary {
                    background-color: #38a3a5 !important;
                    border-color: #38a3a5 !important;
                    color: #ffffff !important;
                }
                .btn-primary:hover, .btn-secondary:hover {
                    background-color: #2d8284 !important;
                    border-color: #2d8284 !important;
                }
            </style>
            
            <div class="container mt-3">
                <h3 class="mb-4">Book an Appointment</h3>
                
                <t t-if="not service">
                    <div class="row">
                        <t t-foreach="services" t-as="srv">
                            <div class="col-md-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title"><t t-esc="srv.name"/></h5>
                                        <p class="card-text"><t t-raw="srv.description or 'No description'"/></p>
                                        <p><strong>Duration:</strong> <t t-esc="srv.duration_minutes"/> min</p>
                                        <p t-if="srv.price &gt; 0"><strong>Price:</strong> <t t-esc="srv.price"/> <t t-esc="srv.currency_id.symbol"/></p>
                                        <a t-attf-href="/book/#{srv.id}" class="btn btn-primary">Book Now</a>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </t>
                
                <t t-if="service">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="card">
                                <div class="card-header">
                                    <h3><t t-esc="service.name"/></h3>
                                </div>
                                <div class="card-body">
                                    <!-- Simple booking form without JS dependencies -->
                                    <form method="POST" t-attf-action="/api/appointments/book" class="ea-booking-form" enctype="multipart/form-data">
                                        <input type="hidden" name="service_id" t-att-value="service.id"/>

                                        <!-- If user is logged in, send partner_id and prefill contact fields -->
                                        <t t-if="request.env.user and request.env.user.id != request.env.ref('base.public_user').id">
                                            <input type="hidden" name="partner_id" t-att-value="request.env.user.partner_id.id"/>
                                            <input type="hidden" name="customer_email" t-att-value="request.env.user.email"/>
                                            <input type="hidden" name="customer_name" t-att-value="request.env.user.name"/>
                                        </t>

                                        <div class="mb-3">
                                            <label class="form-label" for="appointment_date">Preferred Date &amp; Time</label>
                                            <input type="datetime-local" class="form-control" id="appointment_date" name="start_datetime" required="required"/>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label" for="customer_name">Name</label>
                                            <input type="text" class="form-control" id="customer_name" name="customer_name" required="required" t-att-value="request.env.user.name if request.env.user and request.env.user.id != request.env.ref('base.public_user').id else ''"/>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label" for="customer_email">Email</label>
                                            <input type="email" class="form-control" id="customer_email" name="customer_email" required="required" t-att-value="request.env.user.email if request.env.user and request.env.user.id != request.env.ref('base.public_user').id else ''"/>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label" for="customer_phone">Phone</label>
                                            <input type="tel" class="form-control" id="customer_phone" name="customer_phone"/>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label class="form-label" for="notes">Notes (Optional)</label>
                                            <textarea class="form-control" id="notes" name="notes" rows="3"></textarea>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label class="form-label" for="attachments">Attachments (Optional)</label>
                                            <input type="file" class="form-control" id="attachments" name="attachments" multiple="multiple" accept="image/*,.pdf,.doc,.docx,.txt"/>
                                            <small class="form-text text-muted">You can upload multiple files (images, PDFs, documents)</small>
                                        </div>
                                        
                                        <div class="text-end">
                                            <button type="submit" class="btn btn-primary btn-lg">Book Appointment</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Service Details</h5>
                                </div>
                                <div class="card-body">
                                    <p><strong>Duration:</strong> <t t-esc="service.duration_minutes"/> minutes</p>
                                    <p t-if="service.price &gt; 0"><strong>Price:</strong> <t t-esc="service.price"/> <t t-esc="service.currency_id.symbol"/></p>
                                    <div t-if="service.description">
                                        <h6>Description:</h6>
                                        <t t-raw="service.description"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <!-- OAuth Success Template -->
    <template id="oauth_success" name="OAuth Connection Successful">
        <t t-call="portal.portal_layout">
            <div class="container mt-5">
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">Successfully Connected!</h4>
                    <p>Your calendar provider has been connected successfully.</p>
                    <hr/>
                    <p class="mb-0">You can now close this window and return to the configuration page.</p>
                </div>
            </div>
        </t>
    </template>

    <!-- OAuth Error Template -->
    <template id="oauth_error" name="OAuth Connection Error">
        <t t-call="portal.portal_layout">
            <div class="container mt-5">
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">Connection Failed</h4>
                    <p><strong>Error:</strong> <t t-esc="error"/></p>
                    <p t-if="error_description"><t t-esc="error_description"/></p>
                    <hr/>
                    <p class="mb-0">Please try again or contact support if the problem persists.</p>
                </div>
            </div>
        </t>
    </template>

    <!-- Portal Reschedule Appointment Page -->
    <template id="portal_reschedule_appointment" name="Reschedule Appointment">
        <t t-call="portal.portal_layout">
            <style>
                .btn-primary, .btn-secondary {
                    background-color: #38a3a5 !important;
                    border-color: #38a3a5 !important;
                    color: #ffffff !important;
                }
                .btn-primary:hover, .btn-secondary:hover {
                    background-color: #2d8284 !important;
                    border-color: #2d8284 !important;
                }
            </style>
            
            <div class="container mt-3">
                <!-- Back button -->
                <div class="mb-3">
                    <a t-attf-href="/my/appointments/#{appointment.id}" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"/> Back to Appointment
                    </a>
                </div>
                
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-header">
                                <h3>Reschedule Appointment</h3>
                            </div>
                            <div class="card-body">
                                <div class="alert alert-info mb-3">
                                    <strong>Current Appointment:</strong><br/>
                                    <strong>Service:</strong> <t t-esc="appointment.service_id.name"/><br/>
                                    <strong>Current Date:</strong> <t t-esc="appointment.start_datetime" t-options="{'widget': 'datetime'}"/>
                                </div>
                                
                                <form method="POST" t-attf-action="/my/appointments/#{appointment.id}/reschedule">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    
                                    <div class="mb-3">
                                        <label class="form-label" for="new_datetime">Select New Date &amp; Time</label>
                                        <input type="datetime-local" class="form-control" id="new_datetime" name="start_datetime" required="required"/>
                                        <small class="form-text text-muted">Choose a new date and time for your appointment</small>
                                    </div>
                                    
                                    <div class="text-end">
                                        <a t-attf-href="/my/appointments/#{appointment.id}" class="btn btn-secondary">Cancel</a>
                                        <button type="submit" class="btn btn-primary">Confirm Reschedule</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-header">
                                <h5>Appointment Details</h5>
                            </div>
                            <div class="card-body">
                                <p><strong>Service:</strong> <t t-esc="appointment.service_id.name"/></p>
                                <p><strong>Duration:</strong> <t t-esc="appointment.duration_minutes"/> minutes</p>
                                <p><strong>Customer:</strong> <t t-esc="appointment.partner_id.name"/></p>
                                <div t-if="appointment.service_id.description">
                                    <h6>Service Description:</h6>
                                    <t t-esc="appointment.service_id.description"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>
